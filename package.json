{
  "name": "eslint-watch",
  "version": "1.0.5",
  "description": "Run eslint with watch mode",
  "main": "./src/cli.js",
  "scripts": {
    "start": "node ./bin/esw",
    "watch": "node ./bin/esw -w",
    "test": "mocha --bail --colors --reporter spec ./spec",
    "tdd": "mocha --watch --bail --colors --reporter spec ./spec",
    "ci": "npm start && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizowski/eslint-watch.git"
  },
  "bin": {
    "esw": "./bin/esw"
  },
  "keywords": [
    "eslint",
    "watch",
    "javascript",
    "linter"
  ],
  "author": {
    "name": "Colten Rouska",
    "email": "c.rouska@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizowski/eslint-watch/issues"
  },
  "homepage": "https://github.com/rizowski/eslint-watch",
  "dependencies": {
    "chalk": "^1.0.0",
    "chokidar": "^1.0.1",
    "eslint": "0.21.0",
    "optionator": "^0.6.0"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "istanbul": "^0.3.14",
    "mocha": "^2.2.5"
  }
}
