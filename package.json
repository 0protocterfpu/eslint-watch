{
  "name": "eslint-watch",
  "version": "1.2.5",
  "description": "Run eslint with watch mode",
  "main": "./src/cli.js",
  "scripts": {
    "lint": "node ./bin/esw",
    "lw": "node ./bin/esw -w",
    "test": "mocha --bail --colors --reporter spec ./spec",
    "tdd": "mocha --watch --bail --colors --reporter spec ./spec",
    "ci": "npm run coverage && npm run lint",
    "ci-win": "npm run coverage-win && npm run lint",
    "coverage": "istanbul cover node_modules/.bin/_mocha -- -u exports -R spec spec/**/*-spec.js",
    "coverage-win": "istanbul cover node_modules/.bin/mocha -- -u exports -R spec spec/**/*-spec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizowski/eslint-watch.git"
  },
  "bin": {
    "esw": "./bin/esw"
  },
  "keywords": [
    "eslint",
    "plugin",
    "command line tool",
    "watch",
    "javascript",
    "linter"
  ],
  "author": {
    "name": "Colten Rouska",
    "email": "c.rouska@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizowski/eslint-watch/issues"
  },
  "homepage": "https://github.com/rizowski/eslint-watch",
  "peerDependencies": {
    "eslint": ">=0.19.0 <=2.0.0"
  },
  "dependencies": {
    "chalk": "^1.0.0",
    "chokidar": "^1.0.1",
    "optionator": "^0.6.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "istanbul": "^0.3.18",
    "mocha": "^2.2.5",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0"
  }
}
